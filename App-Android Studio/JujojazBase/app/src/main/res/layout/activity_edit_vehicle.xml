<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditVehicle">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        app:title="My Own Car"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:id="@+id/linearEdVehicle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/toolBar">

        <ImageView
            android:id="@+id/imageCar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/nameCar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/ownCarText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ownCarText"
        android:gravity="center"
        android:layout_below="@+id/linearEdVehicle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ownCarText">

        <ImageView
            android:id="@+id/imageOwnCar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/emailOwnCar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/emailOwnCar"
            android:textAlignment="center"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>